@using System.Globalization
@using proj_tt.Web.Models.Common.Modals
@using proj_tt.Web.Models.Order
@using proj_tt.Order.Dto
@using proj_tt.Order
@model proj_tt.Web.Models.Order.IndexViewOrderModel

@{
    Layout = null;
    var selectedStatus = Model.Order?.Status ?? OrderStatus.Pending;
}
<script src="~/view-resources/Views/Orders/_EditModal.js" asp-append-version="true"></script>

@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditOrder")))
<form name="OrderEditForm" role="form" class="form-horizontal">
    <input type="hidden" name="Id" value="@(Model.Order?.Id ?? 0)">
    <div class="modal-body">
        <div class="form-group row required">
            <label class="col-md-3 col-form-label">@L("Status")</label>
            <div class="col-md-9">
                <select class="form-control" name="Status" required>
                    <option value="0" selected="@(selectedStatus == OrderStatus.Pending)">@L("Pending")</option>
                    <option value="1" selected="@(selectedStatus == OrderStatus.Processing)">@L("Processing")</option>
                    <option value="2" selected="@(selectedStatus == OrderStatus.Shipped)">@L("Shipped")</option>
                    <option value="3" selected="@(selectedStatus == OrderStatus.Delivered)">@L("Delivered")</option>
                    <option value="4" selected="@(selectedStatus == OrderStatus.Cancelled)">@L("Cancelled")</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-3 col-form-label">@L("Note")</label>
            <div class="col-md-9">
                <textarea class="form-control" name="Note" rows="3">@(Model.Order?.Note ?? "")</textarea>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>
