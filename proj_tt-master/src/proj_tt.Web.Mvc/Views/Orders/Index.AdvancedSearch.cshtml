@using proj_tt.Order.Dto
@model proj_tt.Web.Models.Order.IndexViewOrderModel

<div class="abp-advanced-search">
    <form id="OrdersSearchForm" class="form-horizontal">
        <div class="input-group">
            <div class="input-group-prepend">
                <button type="button" class="btn bg-blue btn-search">
                    <span class="fas fa-search" aria-hidden="true"></span>
                </button>
            </div>
            <input type="text" name="Keyword" class="form-control txt-search" placeholder="@L("SearchOrders")" />

            <!-- Dropdown filter for Status -->
            <div class="dropdown input-group-append">
                <button type="button"
                        class="btn btn-default dropdown-toggle"
                        data-toggle="dropdown"
                        aria-expanded="false">
                    <i class="fas fa-filter"></i>
                </button>
                <div class="dropdown-menu dropdown-menu-right dd-menu" role="menu" style="padding: 0">
                    <div class="card" style="margin-bottom: 0">
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label">@L("Status")</label>
                                <div class="col-md-10">
                                    <select class="form-control" name="Status">
                                        <option value="">@L("AllStatuses")</option>
                                        <option value="0">@L("Pending")</option>
                                        <option value="1">@L("Processing")</option>
                                        <option value="2">@L("Shipped")</option>
                                        <option value="3">@L("Delivered")</option>
                                        <option value="4">@L("Cancelled")</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div> 