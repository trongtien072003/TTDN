@model proj_tt.Order.Dto.OrderDto

<div class="modal fade" id="OrderDetailModal" tabindex="-1" aria-labelledby="OrderDetailLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chi tiết đơn hàng #ORD@Model.Id</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                <dl class="row">
                    <dt class="col-sm-4">Họ tên</dt>
                    <dd class="col-sm-8">@Model.UserName</dd>
                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.UserEmail</dd>
                    <dt class="col-sm-4">SĐT</dt>
                    <dd class="col-sm-8">@Model.PhoneNumber</dd>
                    <dt class="col-sm-4">Địa chỉ</dt>
                    <dd class="col-sm-8">@Model.Address</dd>
                    <dt class="col-sm-4">Ghi chú</dt>
                    <dd class="col-sm-8">@Model.Note</dd>
                    <dt class="col-sm-4">Trạng thái</dt>
                    <dd class="col-sm-8">@Model.Status</dd>
                    <dt class="col-sm-4">Tổng tiền</dt>
                    <dd class="col-sm-8">@Model.TotalAmount.ToString("N0") VND</dd>
                    <dt class="col-sm-4">Ngày tạo</dt>
                    <dd class="col-sm-8">@Model.CreationTime.ToString("dd/MM/yyyy HH:mm")</dd>
                </dl>

                <h5 class="mt-3">Sản phẩm</h5>
                <table class="table table-bordered table-sm">
                    <thead>
                        <tr>
                            <th>Tên</th>
                            <th>Số lượng</th>
                            <th>Giá</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.Quantity</td>
                                <td>@item.Price.ToString("N0")</td>
                                <td>@(item.Quantity * item.Price).ToString("N0")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
