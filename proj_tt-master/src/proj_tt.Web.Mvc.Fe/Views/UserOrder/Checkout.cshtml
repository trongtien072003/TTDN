@model proj_tt.Web.Models.Orders.CheckoutViewModel
@{
    ViewData["Title"] = "Thanh toán";
}

@section Scripts {
    <script src="~/view-resources/Views/Cart/CheckOut.js"></script>
}

<div class="container mt-5">
    <h2 class="mb-4 fw-bold">Thông tin nhận hàng</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="CreateOrderFromCart" asp-controller="UserOrder" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Họ và tên</label>
            <input asp-for="Name" class="form-control" placeholder="Nhập họ tên" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" required />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" type="email" placeholder="Nhập email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label">Địa chỉ nhận hàng</label>
            <textarea asp-for="Address" class="form-control" rows="3" placeholder="Nhập địa chỉ" required></textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Note" class="form-label">Ghi chú đơn hàng (tùy chọn)</label>
            <textarea asp-for="Note" class="form-control" rows="3" placeholder="Nhập ghi chú nếu có..."></textarea>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title">Tóm tắt đơn hàng</h5>

                @if (Model.CartItems != null && Model.CartItems.Any())
                {
                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Đơn giá</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CartItems)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.UnitPrice.ToString("N0") đ</td>
                                    <td>@(item.Quantity * item.UnitPrice).ToString("N0") đ</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="d-flex justify-content-between fs-5 fw-bold mt-3">
                        <span>Tổng cộng:</span>
                        <span class="text-primary">@Model.TotalAmount.ToString("N0") đ</span>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning mb-0">Không có sản phẩm nào trong giỏ hàng.</div>
                }
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Đặt hàng</button>
            <a href="/cart" class="btn btn-outline-secondary ms-2">Quay lại giỏ hàng</a>
        </div>
    </form>
</div>
