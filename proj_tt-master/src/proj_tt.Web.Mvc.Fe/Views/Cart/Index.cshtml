@model proj_tt.Web.Models.Cart.CartViewModel
@{
    ViewBag.Title = "Your Shopping Cart";
}

@section Scripts {
    <script src="~/view-resources/Views/Cart/IndexCart.js"></script>
}

<div class="container py-5">
    <div class="row">
        <!-- Cart Items -->
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Your Shopping Cart</h5>
                    <small>@Model.TotalQuantity item(s) in your cart</small>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.Items)
                    {
                        <div class="row align-items-center mb-4 border-bottom pb-3">
                            <div class="col-2">
                                <img src="@item.ProductImage" alt="@item.ProductName" class="img-fluid rounded" />
                            </div>
                            <div class="col-4">
                                <h6>@item.ProductName</h6>
                                <small class="text-muted">@item.Quantity x $@item.UnitPrice.ToString("0.00")</small>
                            </div>
                            <div class="col-3 d-flex align-items-center">
                                <form asp-action="UpdateQuantity" method="post" class="d-flex">
                                    <input type="hidden" name="CartItemId" value="@item.Id" />
                                    <input type="number" name="Quantity" value="@item.Quantity" class="form-control form-control-sm w-50 me-1" min="0" />
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">↻</button>
                                </form>
                            </div>
                            <div class="col-2 text-end">
                                <strong>$@item.TotalPrice.ToString("0.00")</strong>
                            </div>
                            <div class="col-1 text-end">
                                <form asp-action="RemoveItem" method="post">
                                    <input type="hidden" name="CartItemId" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-link text-danger">×</button>
                                </form>
                            </div>
                        </div>
                    }

                    <div class="row mt-4">
                        <div class="col-8">
                            <input type="text" class="form-control" placeholder="Enter coupon code" disabled />
                        </div>
                        <div class="col-4">
                            <button class="btn btn-outline-primary w-100" disabled>Apply</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-lg-4 mt-4 mt-lg-0">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="mb-3">Order Summary</h5>
                    <div class="d-flex justify-content-between">
                        <span>Subtotal (@Model.TotalQuantity item(s))</span>
                        <strong>$@Model.TotalAmount</strong>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Shipping</span>
                        <span class="text-success">Free</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Tax</span>
                        <span>$@(Model.TotalAmount * 0.08m)</span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between mb-3">
                        <strong>Total</strong>
                        <strong class="text-primary">$@(Model.TotalAmount * 1.08m)</strong>
                    </div>
                    <a href="/orders/checkout" class="btn btn-primary w-100">Proceed to Checkout</a>
                    <p class="text-center text-muted mt-2" style="font-size: 0.85rem;">
                        <i class="fas fa-lock"></i> Secure checkout
                    </p>
                    <div class="text-center mt-3">
                        <a href="/" class="text-primary"><i class="fas fa-arrow-left"></i> Continue Shopping</a>
                    </div>

                    <form asp-action="Clear" method="post" class="mt-3">
                        <button class="btn btn-outline-danger w-100">Clear Cart</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
