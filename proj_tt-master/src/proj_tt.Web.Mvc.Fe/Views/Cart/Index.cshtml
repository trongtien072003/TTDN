@model proj_tt.Web.Models.Cart.IndexViewCartModel
@{
    ViewData["Title"] = "Giỏ hàng";
}


@section scripts
{
    <environment names="Development">

        <script src="~/view-resources/Views/Cart/IndexCart.js" asp-append-version="true"></script>
    </environment>
      $(function () {
            var message = @Html.Raw(Json.Serialize(TempData["SuccessMessage"]));
            if (message) {
                abp.message.success(message, "Thành công");
            }
        });
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Shopping Cart | Your Store</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50 min-h-screen">
    <main class="max-w-7xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row gap-8">

            <!-- Cart Items Section -->
            <div class="md:w-2/3">
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <div class="p-6 border-b border-gray-200">
                        <h2 class="text-xl font-semibold text-gray-800 flex items-center">
                            <i class="fas fa-shopping-cart mr-2 text-indigo-500"></i>
                            Giỏ hàng của bạn
                        </h2>
                        <p class="text-sm text-gray-500 mt-1">@Model.Items.Count sản phẩm</p>
                    </div>

                    <!-- Danh sách sản phẩm -->
                    <div id="cart-items" class="divide-y divide-gray-200">
                        @if (Model.Items.Any())
                        {
                            foreach (var item in Model.Items)
                            {
                                <div class="cart-item p-6 flex flex-col sm:flex-row gap-4">
                                    <div class="w-full sm:w-32 h-32 bg-gray-100 rounded-lg overflow-hidden flex-shrink-0">
                                        <img src="@item.ImageUrl" alt="@item.ProductName" class="w-full h-full object-cover">
                                    </div>
                                    <div class="flex-grow">
                                        <div class="flex justify-between">
                                            <div>
                                                <h3 class="font-medium text-gray-800">@item.ProductName</h3>
                                            </div>
                                            <form asp-action="RemoveFromCart" method="post">
                                                <input type="hidden" name="ProductId" value="@item.ProductId" />
                                                <button type="submit" class="text-gray-400 hover:text-red-500 transition">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </form>
                                        </div>
                                        <div class="mt-4 flex flex-wrap items-center justify-between">
                                            <div class="input-group" style="max-width: 150px;">
                                                <button type="button" class="btn btn-outline-secondary decrease-btn" data-product-id="@item.ProductId">-</button>
                                                <input type="number"
                                                       class="form-control text-center quantity-input"
                                                       value="@item.Quantity"
                                                       min="1"
                                                       data-product-id="@item.ProductId" />
                                                <button type="button" class="btn btn-outline-secondary increase-btn" data-product-id="@item.ProductId">+</button>
                                            </div>
                                            <span class="text-indigo-600 font-bold text-lg cart-grand-total">
                                                $@Model.TotalPrice.ToString("N2")
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center p-8 text-gray-500">
                                Giỏ hàng trống.
                            </div>
                        }
                    </div>

                    <!-- Footer -->
                    <div class="p-6 border-t border-gray-200 flex justify-between items-center">
                        <a href="/" class="text-indigo-600 hover:text-indigo-800 font-medium flex items-center">
                            <i class="fas fa-arrow-left mr-2"></i> Tiếp tục mua sắm
                        </a>
                        @if (Model.Items.Any())
                        {
                            <form asp-action="Checkout" method="post">
                                <button class="checkout-btn bg-indigo-600 text-white py-2 px-4 rounded-md font-medium hover:bg-indigo-700 flex items-center">
                                    <i class="fas fa-lock mr-2"></i> Thanh toán
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>

            <div class="md:w-1/3">
                <div class="bg-white rounded-lg shadow-md p-6 sticky top-8">
                    <h2 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
                        <i class="fas fa-receipt mr-2 text-indigo-500"></i>
                        Tóm tắt đơn hàng
                    </h2>

                    <div class="space-y-3 mb-6">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Tạm tính</span>
                            <span class="font-medium">$@Model.TotalPrice.ToString("N2")</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Phí vận chuyển</span>
                            <span class="font-medium">VND0.00</span>
                        </div>
                        <div class="border-t border-gray-200 pt-3 mt-3 flex justify-between">
                            <span class="text-gray-800 font-semibold">Tổng cộng</span>
                            <span class="text-indigo-600 font-bold text-lg">$@Model.TotalPrice.ToString("N2")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>
