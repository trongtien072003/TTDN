@section scripts {
<script src="~/view-resources/Views/Home/Index.js" asp-append-version="true"></script>
}

<header class="sticky-top">
    <nav class="navbar navbar-expand-lg navbar-light bg-white py-3 shadow-sm">
        <div class="container-fluid">
            <!-- Logo -->
            <a class="navbar-brand text-primary fw-bold" href="/">
                <i class="fas fa-shopping-bag me-2"></i>ShopOnline
            </a>

            <!-- Toggle for mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation content -->
            <div class="collapse navbar-collapse" id="navbarMain">
                <!-- Search -->
                <form class="d-flex mx-auto search-box" method="get" action="/products">
                    <div class="input-group">
                        <input type="text" name="keyword" id="searchBox" class="form-control" placeholder="Search products..." aria-label="Search">
                        <button class="btn btn-outline-secondary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>

                <ul class="navbar-nav ms-auto align-items-center">
                    <!-- Category dropdown -->
                  <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="categoryDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="fas fa-list me-1"></i> Danh mục
    </a>
    @await Component.InvokeAsync("CategoryMenu")
</li>

                    <!-- Wishlist -->
                    <li class="nav-item me-2">
                        <a href="#" class="btn btn-outline-secondary" title="Wishlist">
                            <i class="far fa-heart"></i>
                        </a>
                    </li>

                    <!-- Cart -->
                    <li class="nav-item me-2 position-relative">
                        <a href="/Cart" class="btn btn-outline-primary position-relative" title="Cart">
                            <i class="fas fa-shopping-cart"></i>
                            @await Component.InvokeAsync("CartMenu")
                        </a>
                    </li>

                    <!-- Dropdown user -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" data-bs-toggle="dropdown">
                            <i class="fas fa-user-circle fs-5"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" asp-controller="UserOrder" asp-action="Index">
                                    <i class="fas fa-box-open me-2"></i> @L("MyOrder")
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Users" asp-action="ChangePassword">
                                    <i class="fas fa-user-edit me-2"></i> @L("UpdatePassword")
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                    <i class="fas fa-sign-out-alt me-2"></i> @L("Logout")
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/account/register">
                                    <i class="fas fa-user-plus me-2"></i> @L("Register")
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
