@model proj_tt.Web.Models.Share.IndexShareModel

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Authentic Shoes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/_Header.css" rel="stylesheet" />
</head>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("filterForm");
        const categorySelect = document.getElementById("categorySelect");
        const keywordInput = document.getElementById("keywordInput");

        // Auto submit khi đổi danh mục
        if (categorySelect) {
            categorySelect.addEventListener("change", function () {
                form.submit();
            });
        }

        // Submit khi nhấn Enter trong input tìm kiếm
        if (keywordInput) {
            keywordInput.addEventListener("keypress", function (e) {
                if (e.key === "Enter") {
                    e.preventDefault();
                    form.submit();
                }
            });
        }
    });
</script>

<body>

    <!-- Topbar -->
    <div class="top-header text-center py-2 bg-light small text-muted">
        Authentic Shoes - Nhà sưu tầm và phân phối chính hãng các thương hiệu thời trang quốc tế hàng đầu Việt Nam
    </div>

    <!-- Main Header -->
    <header class="header-main py-3 bg-white shadow-sm">
        <div class="container-fluid">
            <div class="row align-items-center justify-content-between">
                <!-- Logo -->
                <div class="col-auto">
                    <a href="/" class="header-logo text-decoration-none fw-bold fs-4 text-dark">
                        AUTHENTIC SHOES
                    </a>
                </div>

                <!-- Navigation -->
                <div class="col">
                    <ul class="nav justify-content-center">
                        <li class="nav-item"><a class="nav-link text-dark fw-semibold" href="/">TRANG CHỦ</a></li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark fw-semibold" href="#" role="button" data-bs-toggle="dropdown">
                                DANH MỤC
                            </a>
                            <ul class="dropdown-menu">
                                @if (Model?.Categories != null && Model.Categories.Any())
                                {
                                    foreach (var category in Model.Categories)
                                    {
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Index", "Home", new { categoryId = category.Value })">
                                                @category.Text
                                            </a>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li><span class="dropdown-item text-muted">Không có danh mục</span></li>
                                }
                            </ul>
                        </li>

                        <li class="nav-item"><a class="nav-link text-dark fw-semibold" href="https://vnexpress.net/doi-giay-ban-chon-se-cho-biet-con-duong-dan-den-thanh-cong-4786824.html">TIN TỨC – SỰ KIỆN</a></li>
                        <li class="nav-item"><a class="nav-link text-dark fw-semibold" href="https://www.facebook.com/trong.tien.730826">LIÊN HỆ</a></li>
                        <li class="nav-item"><a class="nav-link text-danger fw-bold" href="https://shopee.vn/search?keyword=gi%C3%A0y">SALE</a></li>
                    </ul>
                </div>

                <!-- Search + Account -->
                <div class="col-auto d-flex align-items-center gap-3">
                    <form id="headerSearchForm" class="d-flex" method="get" action="/Home/Index">
                        <input type="text" name="keyword" class="form-control"
                               value="@ViewBag.Keyword" />
                        <button type="submit" class="btn btn-sm btn-outline-secondary ms-2"><i class="fas fa-search"></i></button>
                    </form>
                    <a href="/cart" class="text-dark position-relative">
                        <i class="fas fa-shopping-bag fs-5"></i>
                    </a>
                    <div class="account-actions">
                        <a href="/account/login" class="text-dark">Đăng nhập</a> /
                        <a href="/account/register" class="text-dark">Đăng ký</a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
